// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTHENTICATION
// ============================================

enum UserRole {
  SUPER_ADMIN
  CENTER_ADMIN
  BRANCH_ADMIN
  EDITOR
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  name          String
  role          UserRole  @default(EDITOR)
  avatar        String?
  isActive      Boolean   @default(true)
  
  // Branch assignment (for BRANCH_ADMIN)
  branchId      String?
  branch        Branch?   @relation(fields: [branchId], references: [id])
  
  // Relations
  pages         Page[]
  createdSliders Slider[]
  createdMenus  Menu[]
  changeRequests ChangeRequest[]
  reviewedChanges ChangeRequest[] @relation("ReviewedChanges")
  notifications Notification[]
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?
  
  @@index([email])
  @@index([role])
  @@index([branchId])
}

// ============================================
// SLIDER MANAGEMENT
// ============================================

model Slider {
  id          String   @id @default(uuid())
  title       String?
  subtitle    String?
  image       String
  mobileImage String?
  link        String?
  target      String   @default("main") // 'main' or branchId
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  
  // Button configurations
  primaryButtonText   String?
  primaryButtonLink   String?
  secondaryButtonText String?
  secondaryButtonLink String?
  
  // Relations
  createdById String
  createdBy   User     @relation(fields: [createdById], references: [id])
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([target])
  @@index([order])
  @@index([isActive])
}

// ============================================
// MENU MANAGEMENT
// ============================================

enum MenuPosition {
  TOPBAR
  HEADER
  FOOTER
}

model Menu {
  id          String       @id @default(uuid())
  name        String
  slug        String       @unique
  position    MenuPosition
  isActive    Boolean      @default(true)
  
  // Relations
  items       MenuItem[]
  createdById String
  createdBy   User         @relation(fields: [createdById], references: [id])
  
  // Timestamps
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  @@index([slug])
  @@index([position])
}

model MenuItem {
  id          String     @id @default(uuid())
  menuId      String
  menu        Menu       @relation(fields: [menuId], references: [id], onDelete: Cascade)
  
  // Hierarchy
  parentId    String?
  parent      MenuItem?  @relation("MenuItemChildren", fields: [parentId], references: [id], onDelete: Cascade)
  children    MenuItem[] @relation("MenuItemChildren")
  
  // Content
  label       String
  url         String?
  pageId      String?
  page        Page?      @relation(fields: [pageId], references: [id])
  categoryId  String?
  category    Category?  @relation(fields: [categoryId], references: [id])
  
  // Settings
  target      String     @default("_self") // _self, _blank
  order       Int        @default(0)
  isActive    Boolean    @default(true)
  
  // SEO
  seoTitle    String?
  seoNoFollow Boolean    @default(false)
  
  // Timestamps
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  @@index([menuId])
  @@index([parentId])
  @@index([order])
}

// ============================================
// CONTENT MANAGEMENT
// ============================================

enum PageType {
  REGULAR
  NEWS
  BLOG
  PHOTO_GALLERY
  VIDEO_GALLERY
}

enum PageStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Page {
  id              String      @id @default(uuid())
  type            PageType    @default(REGULAR)
  status          PageStatus  @default(DRAFT)
  
  // Content
  title           String
  slug            String      @unique
  content         String      @db.Text
  excerpt         String?
  featuredImage   String?
  
  // Relations
  categoryId      String?
  category        Category?   @relation(fields: [categoryId], references: [id])
  authorId        String
  author          User        @relation(fields: [authorId], references: [id])
  branchId        String?
  branch          Branch?     @relation(fields: [branchId], references: [id])
  media           Media[]
  menuItems       MenuItem[]
  
  // Branch news approval
  isApproved      Boolean     @default(false)
  isFeatured      Boolean     @default(false)
  
  // Publishing
  publishedAt     DateTime?
  
  // SEO
  seoTitle        String?
  seoDescription  String?
  seoKeywords     String?
  
  // Timestamps
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@index([slug])
  @@index([type])
  @@index([status])
  @@index([categoryId])
  @@index([branchId])
  @@index([isApproved])
  @@index([publishedAt])
}

// ============================================
// CATEGORY MANAGEMENT
// ============================================

model Category {
  id          String     @id @default(uuid())
  name        String
  slug        String     @unique
  description String?
  image       String?
  icon        String?
  type        String     @default("BLOG")
  
  // Hierarchy
  parentId    String?
  parent      Category?  @relation("CategoryChildren", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryChildren")
  
  // Relations
  pages       Page[]
  menuItems   MenuItem[]
  
  // Settings
  order       Int        @default(0)
  isActive    Boolean    @default(true)
  
  // SEO
  seoTitle    String?
  seoDescription String?
  
  // Timestamps
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  @@index([slug])
  @@index([parentId])
  @@index([order])
}

// ============================================
// BRANCH MANAGEMENT
// ============================================

model Branch {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String?
  
  // Contact
  address     String
  phone       String
  whatsapp    String?
  email       String?
  
  // Working hours
  weekdayHours String?  @default("08:30 - 19:30")
  weekendHours String?  @default("09:00 - 18:00")
  
  // Features (JSON array of feature objects)
  features    Json?
  
  // Location
  lat         Float
  lng         Float
  
  // Media
  image       String?
  customBanner String?
  successBanner String?
  
  // Branding
  logo        String?
  primaryColor String?
  
  // Relations
  users       User[]
  pages       Page[]
  teachers    Teacher[]
  packages    EducationPackage[]
  blogPosts   BlogPost[]
  yearlySuccesses YearlySuccess[]
  changeRequests ChangeRequest[]
  leads       Lead[]
  
  // Settings
  isActive    Boolean  @default(true)
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([slug])
  @@index([isActive])
}

// ============================================
// MEDIA MANAGEMENT
// ============================================

enum MediaType {
  IMAGE
  VIDEO
  DOCUMENT
}

model Media {
  id          String    @id @default(uuid())
  type        MediaType
  filename    String
  originalName String
  mimeType    String
  size        Int
  url         String
  thumbnail   String?
  
  // Relations
  pageId      String?
  page        Page?     @relation(fields: [pageId], references: [id])
  
  // Metadata
  alt         String?
  caption     String?
  
  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([pageId])
  @@index([type])
}

// ============================================
// SITE SETTINGS
// ============================================

model Setting {
  id          String   @id @default(uuid())
  key         String   @unique
  value       String   @db.Text
  type        String   @default("string") // string, number, boolean, json
  group       String   @default("general") // general, seo, social, contact, etc.
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([key])
  @@index([group])
}

// ============================================
// CONTACT FORM SUBMISSIONS
// ============================================

model ContactSubmission {
  id          String   @id @default(uuid())
  name        String
  email       String
  phone       String?
  subject     String?
  message     String   @db.Text
  
  // Branch specific
  branchId    String?
  
  // Status
  isRead      Boolean  @default(false)
  isReplied   Boolean  @default(false)
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([branchId])
  @@index([isRead])
  @@index([createdAt])
}

model Lead {
  id          String   @id @default(uuid())
  name        String
  surname     String
  phone       String
  email       String?
  
  // Branch specific
  branchId    String?
  branch      Branch?  @relation(fields: [branchId], references: [id])
  
  // Status
  status      String   @default("NEW") // NEW, CONTACTED, ENROLLED, REJECTED
  notes       String?  @db.Text
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([branchId])
}

model FranchiseApplication {
  id          String   @id @default(uuid())
  name        String
  surname     String
  phone       String
  email       String
  city        String?
  message     String?  @db.Text
  
  // Status
  status      String   @default("NEW") // NEW, CONTACTED, APPROVED, REJECTED
  notes       String?  @db.Text
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([status])
  @@index([createdAt])
}
// ============================================
// HOMEPAGE CONTENT MANAGEMENT
// ============================================

model BannerCard {
  id          String   @id @default(uuid())
  icon        String   // Emoji or icon name
  title       String
  description String
  bgColor     String   // Tailwind class
  hoverColor  String   // Tailwind class
  link        String
  buttonText  String?  // Button text (e.g., "DETAYLI BİLGİ", "KANALA GİT")
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([order])
  @@index([isActive])
}

model Statistic {
  id        String   @id @default(uuid())
  value     String   // e.g., "81", "250+", "1500+"
  label     String   // e.g., "İl", "Şube"
  icon      String   // Emoji or icon name
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([order])
  @@index([isActive])
}

model Feature {
  id          String   @id @default(uuid())
  title       String
  description String?
  icon        String   // Emoji or icon name
  section     String   // 'success-centers', 'digital-platform', 'abroad-education'
  features    Json?    // Array of sub-features
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([section])
  @@index([order])
  @@index([isActive])
}

model BlogPost {
  id         String   @id @default(uuid())
  title      String
  slug       String?  @unique // URL slug - must be unique
  excerpt    String
  content    String   @db.Text
  category   String   // e.g., 'Rehberlik', 'Sınav Stratejileri', 'Motivasyon'
  author     String
  date       String   // Display date
  image      String
  readTime   String   // e.g., "5 dk"
  isActive   Boolean  @default(true)
  isFeatured Boolean  @default(false)
  
  // SEO fields
  seoTitle       String?
  seoDescription String?
  seoKeywords    String?
  
  // Branch assignment (for branch-specific news)
  branchId   String?
  branch     Branch?  @relation(fields: [branchId], references: [id])
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  publishedAt DateTime? // When the post was published
  
  @@index([category])
  @@index([isActive])
  @@index([branchId])
}

model ExamDate {
  id          String   @id @default(uuid())
  examName    String   // e.g., "TYT", "AYT", "LGS"
  examDate    DateTime
  description String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([examDate])
  @@index([order])
  @@index([isActive])
}

model SocialMedia {
  id        String   @id @default(uuid())
  platform  String   // 'youtube', 'instagram', 'twitter', 'facebook', 'linkedin'
  url       String
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([platform])
  @@index([order])
  @@index([isActive])
}

model YouTubeChannel {
  id           String   @id @default(uuid())
  name         String
  url          String
  thumbnail    String?
  subscribers  String?
  videoCount   String?
  description  String?
  order        Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model YearlySuccess {
  id              String      @id @default(uuid())
  year            String      // e.g., "2024"
  banner          SuccessBanner?
  students        TopStudent[]
  totalDegrees    Int         @default(0)
  placementCount  Int         @default(0)
  successRate     Float       @default(0)
  cityCount       Int         @default(0)
  top100Count     Int         @default(0)
  top1000Count    Int         @default(0)
  yksAverage      Float       @default(0)
  lgsAverage      Float       @default(0)
  isActive        Boolean     @default(true)
  
  // Branch assignment (for branch-specific successes)
  branchId        String?
  branch          Branch?     @relation(fields: [branchId], references: [id])
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@unique([year, branchId])
  @@index([branchId])
  @@index([year])
}

model SuccessBanner {
  id            String        @id @default(uuid())
  yearlySuccess YearlySuccess @relation(fields: [yearlySuccessId], references: [id], onDelete: Cascade)
  yearlySuccessId String      @unique
  title         String
  subtitle      String
  description   String        @db.Text
  image         String
  highlightText String?
  gradientFrom  String        @default("#2563eb")
  gradientTo    String        @default("#1e40af")
}

model TopStudent {
  id              String        @id @default(uuid())
  yearlySuccess   YearlySuccess @relation(fields: [yearlySuccessId], references: [id], onDelete: Cascade)
  yearlySuccessId String
  name            String
  rank            String
  exam            String
  image           String?
  branch          String?
  university      String?
  score           Float?
  order           Int           @default(0)
}
model HomeSection {
  id          String   @id @default(uuid())
  page        String   // e.g., 'home', 'about', 'branches', etc.
  section     String   // e.g., 'hero', 'intro', 'cta', etc.
  title       String?
  subtitle    String?
  description String?  @db.Text
  content     String?  @db.Text
  buttonText  String?
  buttonLink  String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  
  // SEO fields
  seoTitle       String?
  seoDescription String?
  seoKeywords    String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([page, section])
  @@index([page])
  @@index([section])
}

model Teacher {
  id        String   @id @default(uuid())
  name      String
  subject   String
  image     String?
  branchId  String?
  branch    Branch?  @relation(fields: [branchId], references: [id])
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([branchId])
}

model VideoLesson {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  thumbnail   String?
  videoUrl    String
  category    String   
  subject     String   
  duration    String?  
  views       Int      @default(0)
  uploadDate  DateTime @default(now())
  teacher     String?
  difficulty  String?  
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model EducationPackage {
  id               String   @id @default(uuid())
  name             String
  slug             String   @unique
  type             String   
  description      String   @db.Text
  shortDescription String
  price            Float?
  originalPrice    Float?
  image            String?
  features         Json?    
  videoCount       Int?
  subjectCount     Int?
  duration         String?
  isPopular        Boolean  @default(false)
  isNew            Boolean  @default(false)
  discount         Int?
  isActive         Boolean  @default(true)
  order            Int      @default(0)
  
  // Branch specific
  branchId         String?
  branch           Branch?  @relation(fields: [branchId], references: [id])
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  @@index([branchId])
}


// ============================================
// APPROVAL SYSTEM FOR BRANCH CHANGES
// ============================================

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ChangeType {
  BRANCH_UPDATE
  TEACHER_CREATE
  TEACHER_UPDATE
  TEACHER_DELETE
  PACKAGE_CREATE
  PACKAGE_UPDATE
  PACKAGE_DELETE
  BLOG_CREATE
  BLOG_UPDATE
  BLOG_DELETE
  SUCCESS_CREATE
  SUCCESS_UPDATE
  SUCCESS_DELETE
  STUDENT_CREATE
  STUDENT_DELETE
}

model ChangeRequest {
  id          String         @id @default(uuid())
  
  // Request info
  changeType  ChangeType
  status      ApprovalStatus @default(PENDING)
  
  // Who made the request
  requestedBy String
  requester   User           @relation(fields: [requestedBy], references: [id])
  
  // Branch context
  branchId    String
  branch      Branch         @relation(fields: [branchId], references: [id])
  
  // Change data
  entityId    String?        // ID of the entity being changed (teacher id, branch id, etc.)
  entityType  String?        // Type of entity (Teacher, Branch, etc.)
  oldData     Json?          // Original data before change
  newData     Json           // New data to be applied
  
  // Admin review
  reviewedBy  String?
  reviewer    User?          @relation("ReviewedChanges", fields: [reviewedBy], references: [id])
  reviewedAt  DateTime?
  reviewNote  String?        @db.Text
  
  // Relations
  notifications Notification[]
  
  // Timestamps
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  
  @@index([branchId])
  @@index([status])
  @@index([changeType])
  @@index([requestedBy])
}


// ============================================
// NOTIFICATION SYSTEM
// ============================================

enum NotificationType {
  CHANGE_APPROVED
  CHANGE_REJECTED
  CHANGE_PENDING
}

model Notification {
  id          String           @id @default(uuid())
  type        NotificationType
  title       String
  message     String           @db.Text
  
  // Target user
  userId      String
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Related change request
  changeRequestId String?
  changeRequest   ChangeRequest? @relation(fields: [changeRequestId], references: [id], onDelete: Cascade)
  
  // Status
  isRead      Boolean          @default(false)
  
  // Timestamps
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  
  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
}
